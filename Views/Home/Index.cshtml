@{
    ViewData["Title"] = ":: NET Market Ops ::";
    Layout = null;
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/market.ops.css">
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</head>
<body>

                <div>
                        <div id="topbar">
                            <b>@ViewData["Title"]</b>
                        </div>
                </div>

    <div class="container">
        <hr>
        <div class="row">
            <div class="col-sm-4">
                <h2>Produto: </h2>
                <div class="input-group">
                    <input id="cod_Busca" type="number" min="1" class="form-control" placeholder="Código do produto">
                    <span class="input-group-btn">
                        <button id="btn_Busca" class="btn btn-success" type="button">Pesquisar</button>
                    </span>
                </div>
                <br>
                <h3>Informações</h3>
                <hr>
                <form id="op_form_Produto" class="form-horizontal">
                <label>Nome</label>
                <input id="nomeProd" type="text" class="form-control" placeholder="Nome do produto" readonly>
                <br>
                <label>Categoria</label>
                <input id="catProd" type="text" class="form-control" placeholder="Categoria" readonly>
                <br>
                <label>Fornecedor</label>
                <input id="fornProd" type="text" class="form-control" placeholder="Fornecedor" readonly>
                <br>
                
                <label>Preço de venda</label>
                <input id="pvProd" class="form-control"  type="number" step="any" placeholder="20.50" readonly><br>
                
                <label>Quantidade</label>
                <input id="qtdProd" class="form-control" type="number" step="any" placeholder="Quantidade" readonly required><br>
                
                <button id="btn_Confirma" class="btn btn-success" disabled>Confirmar</button>
                </form>

            </div>
            <div class="col-sm-8">
                    <h3>Compra: </h3>
                    <hr>
                <div id="table-scroll">
                    <table id="tb_Itens" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nome</th>
                                <th>Quantidade</th>
                                <th>Preço de venda (R$)</th>
                                <th>Medição</th>
                                <th>Total (R$)</th>
                                <th>Remover</th>
                                </tr>
                                </thead>
                        <tbody>  
                        </tbody>
                        </table>
                </div>
            </div>
        </div>
        <hr>
        <div class="row" >
            <hr>
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                    <button id="btn_Finalizar" type="button" class="btn btn-success" data-toggle="modal" data-target="#modal_FinalizarCompra">Finalizar Compra</button>
                    <button id="btn_Cancelar" type="button" class="btn btn-danger">Cancelar compra</button>
            </div>
            <div class="col-sm-4"></div>
        </div>
        <hr>
    </div>
    <!-- The Modal -->
<div class="modal" id="modal_FinalizarCompra">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Finalizar venda</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
          <h2>Total:<span id="totalCompra">0</span></h2>
          <hr>
          <p>Valor pago:</p>
          <input id="modal_ValorPago" type="number" placeholder="0" step="0.01" class="form-control">
          <p>Troco:</p>
          <input id="modal_ValorTroco" type="number" step="0.01" disabled class="form-control">  
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <div class="posvenda">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Fechar</button>
        </div>
        <div class="prevenda">
            <button id="modal_btn_Finalizar" type="button" class="btn btn-success" data-dismiss="modal" disabled>Finalizar venda</button>
            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
        </div>
      </div>

    </div>
  </div>
</div>

</body>
<script src="~/js/market.ops.js"></script>
