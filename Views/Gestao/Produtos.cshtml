@{
    Layout = "_LayoutAdmin";
    ViewBag.Title = "Produtos";
}
@model IEnumerable<market.Models.Produto>;
<script>
    $(document).ready( function () {
    $('#tb_Produtos').DataTable();
} );
</script>
<div class="row">
    <div class="col">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="col"></div>
    <div class="col">
        <a  class="btn btn-success" asp-action="NovoProduto" asp-controller="Gestao" >Criar Produto</a>
    </div>
</div> 
<br/>   
    <table id="tb_Produtos" class="table table-striped bordered">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Nome
                </th>
                <th>
                    Categoria
                </th>
                <th>
                    Fornecedor
                </th>
                <th>
                    Custo
                </th>
                <th>
                    Venda
                </th>
                <th>
                    Medida
                </th>
                <th>
                    Ações
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Produto prod in Model)
            {
                <tr>
                    <td>
                        @prod.Id
                    </td>
                    <td>
                        @prod.Nome
                    </td>
                    <td>
                        @prod.CategoriaNome
                    </td>
                    <td>
                        @prod.FornecedorNome
                    </td>
                    <td>
                        @prod.PrecoCusto
                    </td>
                    <td>
                        @prod.PrecoVenda
                    </td>
                    <td>
                        @prod.Medicao
                    </td>
                    <td>
                        <form id="edit_form_Produto" method="GET" style="display: inline;">
                            <button class="btn btn-primary" type="submit" asp-action="EditarProduto" asp-controller="Gestao" asp-route-id="@prod.Id">Editar</button>
                        </form>
                        <form id="del_form_Produto" method="POST" asp-action="Deletar" asp-controller="Produtos" style="display: inline;">
                            <input type="hidden" id="Id" name="Id" value="@prod.Id"/>
                            <button type="submit" class="btn btn-danger">Remover</button>
                        </form>
                    </td>       
                </tr>
            }
        </tbody>
    </table>
