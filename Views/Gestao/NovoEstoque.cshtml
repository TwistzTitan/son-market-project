@model market.Models.Estoque;
@{
    Layout = "_LayoutAdmin";
    ViewBag.Title = "Criar Estoque";
}
<h3>@ViewBag.Title</h3>
<br/>
<form class="needs-validation" method="POST" asp-action="Salvar" asp-controller="Estoques">
    <input type="hidden" asp-for="Id" value="0"/>
    <div class="form-group">
        <label asp-for="Produto"></label>
        <select class="form-control" asp-for="Produto" asp-items="@ViewBag.Produtos" required></select>
        <span class="text-danger" asp-validation-for="Produto"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantidade"></label>
        <input class="form-control" asp-for="Quantidade" placeholder="Ex: 25" step="any" min="1" type="number" required/>
        <span class="text-danger" asp-validation-for="Quantidade"></span>
    </div>
    <br/>
    <button class="btn btn-success" type="submit">Cadastrar</button>
</form>