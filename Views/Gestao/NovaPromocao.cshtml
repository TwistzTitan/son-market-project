@model market.Models.Promocao;
@{
    Layout = "_LayoutAdmin";
    ViewBag.Title = "Criar Promoção";
}
<h3>@ViewBag.Title</h3>
<br/>
<form class="needs-validation" method="POST" asp-action="Salvar" asp-controller="Promocoes">
    <input type="hidden" asp-for="Id" value="0"/>
    <input type="hidden" asp-for="Status" value="false"/>
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input class="form-control" asp-for="Nome" required/>
        <span class="text-danger" asp-validation-for="Nome"></span>
    </div>
    <div class="form-group">
        <label asp-for="Produto"></label>
        <select class="form-control" asp-for="Produto" asp-items="@ViewBag.Produtos" required></select>
        <span class="text-danger" asp-validation-for="Produto"></span>
    </div>
    <div class="form-group">
        <label asp-for="Porcentagem"></label>
        <input class="form-control" asp-for="Porcentagem" placeholder="Ex: 25" step="any" max="50" type="number" required/>
        <span class="text-danger" asp-validation-for="Porcentagem"></span>
    </div>
    <br/>
    <button class="btn btn-success" type="submit">Cadastrar</button>
</form>