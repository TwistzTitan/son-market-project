@model market.Models.Produto;
@{
    Layout = "_LayoutAdmin";
    ViewBag.Title = "Criar Produto";
}
<h3>@ViewBag.Title</h3>
<br/>
<form class="form-horizontal" method="POST" asp-action="Salvar" asp-controller="Produtos">
    <input type="hidden" asp-for="Id" value="0"/>
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input class="form-control" asp-for="Nome"/>
        <span asp-validation-for="Nome"></span>
    </div>
    <div class="form-group">
        <label asp-for="Categoria"></label>
        <select class="form-control" asp-for="Categoria" asp-items="@ViewBag.Categorias"></select>
        <span asp-validation-for="Categoria"></span>
    </div>
    <div class="form-group">
        <label asp-for="Fornecedor"></label>
        <select class="form-control" asp-for="Fornecedor" asp-items="@ViewBag.Fornecedores"></select>
        <span asp-validation-for="Fornecedor"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="PrecoCusto"></label>
        <input class="form-control" asp-for="PrecoCusto" type="number" min="0" step="any"/>
        <span asp-validation-for="PrecoCusto"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="PrecoVenda"></label>
        <input class="form-control" asp-for="PrecoVenda" type="number" min="0" step="any"/>
        <span asp-validation-for="PrecoVenda"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Medicao"></label>
        <select class="form-control" asp-for="Medicao">
            <option value="0">Litro</option>
            <option value="1">Kilo</option>
            <option value="2">Unidade</option>
        </select>
        <span asp-validation-for="Medicao"></span>
    </div>
    
    <br/>
    <button class="btn btn-success" type="submit">Cadastrar</button>
</form>