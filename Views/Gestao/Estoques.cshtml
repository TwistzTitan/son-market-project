@{
    Layout = "_LayoutAdmin";
    ViewBag.Title = "Estoques";
}
@model IEnumerable<market.Models.Estoque>;
<script>
    $(document).ready( function () {
    $('#tb_Promocoes').DataTable(
        {
            "info": false,
            "language": {
                "lengthMenu": "Exibindo _MENU_ registros por página",
                "zeroRecords": "Nenhum resultado encontrado",
                "info": "Exibindo _PAGE de _PAGES_",
                "infoEmpty": "Nenhum resultado disponível",
                "search": "Buscar: ", 
                "paginate": {
                    "first": "Primeira",
                    "last" : "Última",
                    "next" : "Próxima",
                    "previous": "Anterior"
                }
            }
        }
    );
    } );
</script>
<div class="row">
    <div class="col">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="col"></div>
    <div class="col">
        <a  class="btn btn-success" asp-action="NovoEstoque" asp-controller="Gestao" >Criar @ViewBag.Title</a>
    </div>
</div> 
<br/>   
    <table id="tb_Promocoes" class="table table-striped bordered">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Nome do Produto
                </th>
                <th>
                    Quantidade
                </th>
                <th>
                    Ações
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Estoque estoque in Model)
            {
                <tr>
                    <td>
                        @estoque.Id
                    </td>
                    <td>
                        @estoque.ProdutoNome
                    </td>
                    <td>
                        @estoque.Quantidade
                    </td>
                    <td>
                        <form id="edit_form_Estoque" method="GET" style="display: inline;">
                            <button class="btn btn-primary" type="submit" asp-action="EditarEstoque" asp-controller="Gestao" asp-route-id="@estoque.Id">Editar</button>
                        </form>
                    </td>       
                </tr>
            }
        </tbody>
    </table>
